---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getEntry, render } from 'astro:content';

const about = await getEntry('pages', 'about');
const { Content } = await render(about);
const timeline = about.data.timeline || [];
---

<BaseLayout title="Samar Ahsan" description={about.data.description}>
  <article class="about-page">
    <div class="about-content">
      <Content />
    </div>

    {timeline.length > 0 && (
      <section class="history">
        <h2>A Brief History</h2>
        <div class="timeline">
          <div class="timeline-line"></div>
          {timeline.map((item, index) => (
            <div class={`timeline-item ${index % 2 === 0 ? 'left' : 'right'}`}>
              <div class="timeline-text">
                <h3>{item.title}</h3>
                <span class="timeline-date-mobile">{item.date.toUpperCase()}</span>
                <p>{item.description}</p>
              </div>
              <div class="timeline-connector"></div>
              <div class="timeline-node">
                <span class="timeline-date">{item.date.toUpperCase()}</span>
              </div>
            </div>
          ))}
        </div>
      </section>
    )}

  </article>
</BaseLayout>

<style>
  .about-page {
    max-width: var(--content-width);
    margin: 0 auto;
  }

  .about-content :global(h1) {
    margin-top: 0;
    font-size: var(--text-3xl);
    font-weight: 700;
    margin-bottom: var(--space-6);
    letter-spacing: -0.02em;
  }

  .about-content :global(h1 + p) {
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
    color: var(--ink);
  }

  .about-content :global(p + p) {
    font-size: var(--text-md);
    line-height: var(--leading-relaxed);
    color: var(--ink-muted);
  }

  /* History Section */
  .history {
    margin-top: var(--space-16);
    padding-top: var(--space-12);
    border-top: 1px solid var(--rule);
  }

  .history h2 {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--ink-muted);
    margin-bottom: var(--space-10);
    text-align: center;
  }

  /* Timeline */
  .timeline {
    position: relative;
    max-width: 900px;
    margin: 0 auto;
    padding: var(--space-4) 0;
  }

  /* Vertical center line - purple spine */
  .timeline-line {
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--surface-purple);
    transform: translateX(-50%);
  }

  /* Each timeline item - fixed height for even spacing */
  .timeline-item {
    position: relative;
    height: 120px;
    display: flex;
    align-items: center;
  }

  /* Node container - centered on vertical line for date badge */
  .timeline-node {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    align-items: center;
    z-index: 2;
  }

  /* Date badge */
  .timeline-date {
    font-family: var(--font-mono);
    background: var(--surface-purple);
    color: var(--ink);
    padding: var(--space-2) var(--space-3);
    font-size: var(--text-xs);
    font-weight: 500;
    letter-spacing: 0.04em;
    white-space: nowrap;
    border-radius: var(--radius-sm);
  }

  /* Horizontal connector line - black branches */
  .timeline-connector {
    position: absolute;
    top: 50%;
    height: 1px;
    background: var(--ink);
    width: calc(50% - 160px);
  }

  /* Text content */
  .timeline-text {
    position: absolute;
    width: calc(50% - 180px);
  }

  .timeline-text h3 {
    font-family: var(--font-serif);
    font-size: var(--text-base);
    font-weight: 600;
    margin: 0 0 var(--space-2);
  }

  .timeline-text p {
    font-size: var(--text-sm);
    line-height: var(--leading-normal);
    color: var(--ink-muted);
    margin: 0;
  }

  /* Mobile-only date (hidden on desktop) */
  .timeline-date-mobile {
    display: none;
  }

  /* LEFT side events: text on left, date on right of dot */
  .timeline-item.left .timeline-text {
    left: 0;
    text-align: right;
  }

  .timeline-item.left .timeline-connector {
    left: calc(50% - 160px);
    right: 50%;
  }

  .timeline-item.left .timeline-node {
    flex-direction: row-reverse;
  }

  /* RIGHT side events: text on right, date on left */
  .timeline-item.right .timeline-text {
    right: 0;
    text-align: left;
  }

  .timeline-item.right .timeline-connector {
    left: 50%;
    width: calc(50% - 160px);
  }

  .timeline-item.right .timeline-node {
    flex-direction: row;
  }

  /* ==============================================
     SCROLL ANIMATION STYLES
     Default states: elements are hidden/offset
     .is-visible class triggers the animated state
     ============================================== */

  /* Spine: starts with no height, draws downward */
  .timeline-line {
    transform: translateX(-50%) scaleY(0);
    transform-origin: top center;
    transition: transform 1.2s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .timeline-line.is-visible {
    transform: translateX(-50%) scaleY(1);
  }

  /* Nodes (dot + date): start smaller and transparent */
  .timeline-node {
    opacity: 0;
    transition: opacity 0.5s ease, transform 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .timeline-node.is-visible {
    opacity: 1;
  }

  /* Cards (text): slide in from their respective sides */
  .timeline-text {
    opacity: 0;
    transition: opacity 0.6s ease, transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Left cards slide in from the left */
  .timeline-item.left .timeline-text {
    transform: translateX(-30px);
  }

  /* Right cards slide in from the right */
  .timeline-item.right .timeline-text {
    transform: translateX(30px);
  }

  .timeline-text.is-visible {
    opacity: 1;
    transform: translateX(0);
  }

  /* Connector lines: fade in */
  .timeline-connector {
    opacity: 0;
    transition: opacity 0.5s ease 0.2s;
  }

  .timeline-connector.is-visible {
    opacity: 1;
  }

  /* Respect reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .timeline-line,
    .timeline-node,
    .timeline-text,
    .timeline-connector {
      transition: none;
      opacity: 1;
      transform: none;
    }

    .timeline-line {
      transform: translateX(-50%) scaleY(1);
    }
  }

  /* Mobile */
  @media (max-width: 768px) {
    .about-content :global(h1) {
      font-size: var(--text-2xl);
    }

    .about-content :global(h1 + p) {
      font-size: var(--text-base);
    }

    .history {
      margin-top: var(--space-12);
      padding-top: var(--space-8);
    }

    .timeline {
      padding: var(--space-4) 0 var(--space-4) 0;
    }

    .timeline-line {
      left: 5px;
      transform: none;
    }

    .timeline-item {
      height: auto;
      min-height: auto;
      padding: 0 0 var(--space-8) var(--space-8);
      display: block;
    }

    .timeline-node {
      position: absolute;
      left: 0;
      top: 0;
      transform: none;
      flex-direction: row;
      align-items: center;
      gap: 0;
    }

    .timeline-item.left .timeline-node,
    .timeline-item.right .timeline-node {
      flex-direction: row;
    }

    .timeline-date {
      display: none;
    }

    .timeline-date-mobile {
      display: inline-block;
      font-family: var(--font-mono);
      font-size: var(--text-xs);
      font-weight: 500;
      letter-spacing: 0.04em;
      color: var(--ink);
      background: var(--surface-purple);
      padding: var(--space-1) var(--space-2);
      border-radius: var(--radius-sm);
      margin: var(--space-1) 0 var(--space-2);
    }

    .timeline-connector {
      display: none;
    }

    .timeline-text {
      position: relative;
      width: 100%;
      left: auto;
      right: auto;
      padding-left: 0;
    }

    .timeline-text h3 {
      font-size: var(--text-base);
      margin-bottom: 0;
    }

    .timeline-text p {
      font-size: var(--text-sm);
      margin-top: 0;
    }

    .timeline-item.left .timeline-text,
    .timeline-item.right .timeline-text {
      text-align: left;
    }

    /* Mobile animation adjustments */
    .timeline-line {
      transform: scaleY(0);
      transform-origin: top center;
    }

    .timeline-line.is-visible {
      transform: scaleY(1);
    }

    /* On mobile, all cards slide from left */
    .timeline-item.left .timeline-text,
    .timeline-item.right .timeline-text {
      transform: translateX(-20px);
    }

    .timeline-text.is-visible {
      transform: translateX(0);
    }
  }
</style>

<script>
  /**
   * Timeline Scroll Animation
   *
   * Uses IntersectionObserver to trigger animations as elements enter the viewport.
   * - Spine draws downward when timeline section becomes visible
   * - Nodes pop in when they enter the viewport
   * - Cards slide in from their respective sides
   *
   * Respects prefers-reduced-motion by checking media query before animating.
   * Graceful degradation: content is visible even if JS fails (via CSS :not(.js-enabled) or noscript).
   */

  // Only run animations if user hasn't requested reduced motion
  const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

  if (!prefersReducedMotion) {
    // Get all animatable elements
    const timelineLine = document.querySelector('.timeline-line');
    const timelineItems = document.querySelectorAll('.timeline-item');

    /**
     * Observer for the spine (timeline-line)
     * Triggers when the timeline section enters the viewport
     * Uses a lower threshold so it starts drawing early
     */
    const spineObserver = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('is-visible');
            // Once visible, no need to observe anymore
            spineObserver.unobserve(entry.target);
          }
        });
      },
      {
        threshold: 0,
        rootMargin: '0px 0px -10% 0px' // Trigger slightly before fully in view
      }
    );

    /**
     * Observer for timeline items (nodes, cards, connectors)
     * Each item animates independently when it enters the viewport
     * Uses a higher threshold so items animate when more visible
     */
    const itemObserver = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const item = entry.target;

            // Find child elements to animate
            const node = item.querySelector('.timeline-node');
            const text = item.querySelector('.timeline-text');
            const connector = item.querySelector('.timeline-connector');

            // Stagger the animations slightly
            // Node pops first
            if (node) {
              node.classList.add('is-visible');
            }

            // Card slides in shortly after
            if (text) {
              setTimeout(() => {
                text.classList.add('is-visible');
              }, 100);
            }

            // Connector fades in last
            if (connector) {
              setTimeout(() => {
                connector.classList.add('is-visible');
              }, 150);
            }

            // Once animated, stop observing
            itemObserver.unobserve(item);
          }
        });
      },
      {
        threshold: 0.2, // Trigger when 20% of item is visible
        rootMargin: '0px 0px -50px 0px' // Small offset from bottom
      }
    );

    // Start observing elements
    if (timelineLine) {
      spineObserver.observe(timelineLine);
    }

    timelineItems.forEach((item) => {
      itemObserver.observe(item);
    });
  } else {
    // If reduced motion is preferred, make everything visible immediately
    document.querySelectorAll('.timeline-line, .timeline-node, .timeline-text, .timeline-connector')
      .forEach((el) => el.classList.add('is-visible'));
  }
</script>

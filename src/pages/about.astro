---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getEntry, render } from 'astro:content';

const about = await getEntry('pages', 'about');
const { Content } = await render(about);
---

<BaseLayout title={about.data.title} description={about.data.description}>
  <article class="about-page">
    <div class="about-content">
      <Content />
    </div>

    <section class="about-image">
      <img src="/images/placeholder.svg" alt="Samar Ahsan" />
    </section>
  </article>
</BaseLayout>

<style>
  .about-page {
    max-width: var(--content-width);
  }

  .about-content :global(h1) {
    margin-top: 0;
    font-size: 2.5rem;
    font-weight: 500;
    margin-bottom: 1.5rem;
  }

  .about-content :global(h1 + p) {
    font-size: 1.25rem;
    line-height: 1.6;
    color: var(--color-text);
  }

  .about-content :global(h1 + p a) {
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .about-content :global(hr) {
    margin: 2.5rem 0;
  }

  .about-content :global(h2) {
    font-size: 1.5rem;
    font-weight: 500;
    margin-top: 0;
    margin-bottom: 1rem;
  }

  .about-content :global(h2 ~ p) {
    font-size: 1.0625rem;
    line-height: 1.7;
    color: var(--color-text-muted);
  }

  .about-content :global(> p:last-of-type) {
    margin: 2rem 0;
  }

  .about-content :global(> p:last-of-type a) {
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .about-image {
    margin-top: 3rem;
  }

  .about-image img {
    width: 100%;
    max-width: 400px;
  }

  @media (max-width: 768px) {
    .about-content :global(h1) {
      font-size: 2rem;
    }

    .about-content :global(h1 + p) {
      font-size: 1.125rem;
    }
  }
</style>
